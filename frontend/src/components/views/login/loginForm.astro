---
import Input from "@/components/shared/input.astro";
import Button from "@/components/shared/button";
import ErrorMessage from "@/components/shared/errorMessage.astro";
import Loader from "@/components/shared/loader.astro";
---

<div class="login-form">
    <form
        id="form-login"
        class="form-container relative"
        enctype="application/x-www-form-urlencoded"
    >
        <div class="form-header">
            <h2>Bienvenido</h2>
            <p>Ingresa a tu cuenta</p>
        </div>

        <div class="form-group">
            <Input
                id="email"
                classText="border-solid border-2 border-[#e2e8f0]"
                autocomplete="username"
                withLabel
                label="Correo electrónico"
                name="email"
                type="email"
                required
                placeholder="ejemplo@correo.com"
            />
            <ErrorMessage isHidden={true} idError="email-error" />
        </div>

        <div class="form-group">
            <Input
                id="password"
                withLabel
                autocomplete="current-password"
                required
                classText="border-solid border-2 border-[#e2e8f0]"
                label="Contraseña"
                name="password"
                type="password"
                placeholder="••••••••"
            />
            <ErrorMessage isHidden={true} idError="password-error" />
        </div>
        <Button
            type="submit"
            classText="w-full btn-login"
            text="Inicar sesión"
        />
        <Loader id="loader-login"/>
    </form>
</div>

<style>
    .login-form {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .form-container {
        background: white;
        padding: 2.5rem;
        border-radius: 1rem;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
        margin: 1rem;
    }

    .form-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .form-header h2 {
        color: #1a1a1a;
        font-size: 2rem;
        margin-bottom: 0.5rem;
    }

    .form-header p {
        color: #666;
        font-size: 0.95rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    @media (max-width: 480px) {
        .form-container {
            padding: 1.5rem;
        }
    }
</style>
