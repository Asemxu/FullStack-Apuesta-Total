---
import { TYPEUSER } from "@/helpers/constants";
import Navigation from "./navigation.astro";

const { typeUser } = Astro.props;
---

{
    typeUser == TYPEUSER.USER && (
        <main class="h-full text-white px-4 bg-gradient flex  flex-col justify-center items-center overflow-hidden overflow-y-scroll">
            <div class="container mx-auto ">
                <section class="flex items-center justify-center">
					<slot />
                </section>
            </div>
        </main>
    )
    
}


{
    typeUser == TYPEUSER.ADMIN && (
        <main class="h-full text-white px-4 bg-gradient overflow-hidden">
            <div class="container mx-auto ">
                <section class="admin-container py-4">
                    <Navigation />
					<slot />
                </section>
            </div>
        </main>
    )
    
}
